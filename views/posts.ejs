<div class="all-posts container-fluid">
    <div class="row">
        <ul class="my-5">
            <% data.forEach(el => { %>
                <li class="all-posts__single-post d-flex justify-content-between align-items-end mt-2">
                    <a href="/post/<%= el._id %>" class="title-small"><%= el.title %></a>
                    <!-- toDateString() per abbreviare la data -->
                    <span class="description"><%= el.createdAt.toDateString() %></span>
                </li>
            <% }) %>
        </ul>
        
        <!-- pagination -->
        <% if (nextPage !== null) { %>
            <div class="all-posts__paginator d-flex mb-5">
                <a href="/posts/?page=<%= nextPage %>">vedi vecchi post</a>
                <!-- <span class="mx-3">/</span>
                <a href="/posts">vedi tutti i post</a> -->
            </div>
        <% } %>
    </div>
</div>